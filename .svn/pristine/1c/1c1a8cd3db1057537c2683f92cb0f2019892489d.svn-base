dropdown {
/*   float: left; */
  display: block;
  width: 100%;
}
dropdown > div {
/*   float: left; */
  width: 100%;
}
dropdown > div > div.dropdown-display {
  float: left;
  width: 100%;
  background: #fff;
  height: 3rem;
  cursor: pointer;
  border: solid 1px #DDD;
  box-sizing: border-box;
}
dropdown > div > div.dropdown-display > * {
  float: left;
/*   height: 100%; */
/*   height: 40px; */
  line-height: 3rem !important;
/*   display: inline-block; */
/*   vertical-align: middle; */
}
dropdown > div > div.dropdown-display > span {
  font-size: 1.15rem;
  width: 100%;
  position: relative;
  box-sizing: border-box;
/*   padding-right: 34px; */
  padding-left: 1.5rem;
}
dropdown > div > div.dropdown-display > span.placeholder {
  color: #AAA;
}
dropdown > div > div.dropdown-display > i {
  position: relative;
  width: auto;
  margin-left: -2rem;
  font-size: 1.15rem;
  font-weight: bold;
/*   padding-right: 10px; */
  text-align: right;
}
dropdown > div > div.dropdown-list {
  float: left;
  position: relative;
  width: 100%;
  z-index: 1;
  transform: scale(1, 0);
  transition: transform ease 250ms;
}
dropdown > div > div.dropdown-list > div {
  position: absolute;
  width: 100%;
  z-index: 2;
  cursor: pointer;
  background: white;
}
dropdown > div > div.dropdown-list > div > div {
  float: left;
  width: 100%;
  padding: 0 0.7143rem;
  font-size: 1.15rem;
  box-sizing: border-box;
  border: solid 1px #DDD;
  border-top: none;
  padding-left: 1.5rem;
}
dropdown > div > div.dropdown-list > div > div:hover {
  background-color: #E92D3D;
  color: #fff;
}
dropdown > div > div.dropdown-list > div > div.selected {
  background-color: #F0F0F0;
  color: #444;
  cursor: default;
}
dropdown > div > div.dropdown-list > div > div > * {
  height: 2.8rem;
  line-height: 2.8rem;
/*   display: inline-block; */
/*   vertical-align: middle; */
}
dropdown > div > div.dropdown-list > div > div > span {
  float: left;
  width: 100%;
  position: relative;
  padding-right: 2.5rem;
  box-sizing: border-box;
  color: inherit;
}
dropdown > div > div.dropdown-list > div > div > i {
  float: left;
  width: 1.7rem;
  margin-left: -1.7rem;
  display: none;
  font-size: 1.1rem;
}
dropdown > div > div.dropdown-list > div > div.selected > i {
  display: inline-block;
}
dropdown > div.show > div.dropdown-list {
  transform: scale(1, 1);
}
