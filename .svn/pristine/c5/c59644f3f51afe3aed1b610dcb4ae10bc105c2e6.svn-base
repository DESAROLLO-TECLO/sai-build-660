<html>
<head>
<meta charset="utf-8">
<title>Registro de Impugnación</title>
</head>
<body>

	<section class="content-header">
		<h1>Registro de Impugnación</h1>
		<ol class="breadcrumb">
			<li><a><i class="fa fa-book"></i>Impugnación</a></li>
			<li class="active">Registro</li>
		</ol>
	</section>

	<!-- Main content -->

	<section class="content">
		<div class="row">
			<div class="col-md-8 col-md-offset-2">
				<div class="box box-danger">
					<div class="box-header with-border">
						<div align="center">
							<h3 class="box-title">Impugnación</h3>
						</div>

					</div>

					<div class="box-body">
					 <div class="col-md-12">
						<form name="userForm" novalidate>
							<div class="row">
								<div class="col-md-6 ">
									<!-- NO JUICIO -->
									<div class="form-group"
										ng-class="{ 'has-error' : userForm.impugnacionJuicio.$invalid && !userForm.impugnacionJuicio.$pristine }">
										<div align="left">
											<label>*No. de Juicio</label>
										</div>

										<div class="input-group">
											<span class="input-group-addon"><i class="fa fa-gavel"></i></span>
											<input capitalize type="text" name="impugnacionJuicio"
												class="form-control" ng-model="impugna.impugnacionJuicio"
												required maxlength="40">
										</div>
										<div
											ng-show="userForm.impugnacionJuicio.$invalid && !userForm.impugnacionJuicio.$pristine"
											class="help-block text-left">El no. de juicio es
											requerido</div>
									</div>
								</div>

								<div class="col-md-6 ">
									<!-- NO JUICIO JURIDICO-->
									<div class="form-group"
										ng-class="{ 'has-error' : userForm.impugnacionOficioJur.$invalid && !userForm.impugnacionOficioJur.$pristine }">
										<div align="left">
											<label>*No. de Oficio Jurídico</label>
										</div>

										<div class="input-group">
											<span class="input-group-addon"><i class="fa fa-gavel"></i></span>

											<input capitalize type="text" name="impugnacionOficioJur"
												class="form-control" ng-model="impugna.impugnacionOficioJur"
												required maxlength="40">
										</div>
										<div
											ng-show="userForm.impugnacionOficioJur.$invalid && !userForm.impugnacionOficioJur.$pristine"
											class="help-block text-left">El no. de oficio jurídico
											es requerido</div>
									</div>
								</div>
						  </div>		
							
							<div class="row">	
								<div class="col-md-6 ">
									<div class="form-group"
										ng-class="{ 'has-error' : userForm.impugnacionConstanciaCump.$invalid && !userForm.impugnacionConstanciaCump.$pristine }">
										<div align="left">
											<label>*Constancia de Cumplimiento</label>
										</div>

										<div class="input-group">
											<span class="input-group-addon"><i
												class="fa fa-file-text-o"></i></span> <input capitalize type="text"
												name="impugnacionConstanciaCump" class="form-control"
												ng-model="impugna.impugnacionConstanciaCump" required  maxlength="30">
										</div>
										<div
											ng-show="userForm.impugnacionConstanciaCump.$invalid && !userForm.impugnacionConstanciaCump.$pristine"
											class="help-block text-left">La constancia de
											cumplimiento es requerida</div>
									</div>
								</div>

								<div class="col-md-6 ">
									<!-- USERNAME -->
									<div class="form-group"
										ng-class="{ 'has-error' : userForm.fechaRecepcion.$invalid && !userForm.fechaRecepcion.$pristine }">
										<div align="left">
											<label>*Fecha de Recepción</label>
										</div>

										<div class="input-group date " datetimepicker options="dateTimePickerOptions"
											ng-required="true"
													ng-model="impugna.fechaRecepcion"
													name="fechaRecepcion"
													show-button-bar="true" ng-required="true">
											<div class="input-group-addon">
												<i class="fa fa-calendar"></i>
											</div>
											<input type="text" 
												id="fechaRecepcion" class="form-control inputFecha input-append"
												readonly>
										</div>
										<div
											ng-show="userForm.fechaRecepcion.$invalid && !userForm.fechaRecepcion.$pristine"
											class="help-block text-left">La fecha de emisión es
											requerida</div>
									</div>
								</div>
							</div>
							
								<div>
									<div class="col-md-12 text-left">
										<div align="left">
											<hr />
											<h4 align="center">Datos del Actor</h4>
										</div>
									</div>

								</div>
							<div class="row">
								<div class="col-md-6 ">
									<!-- NAME -->
									<div class="form-group"
										ng-class="{ 'has-error' : userForm.actorNombre.$invalid && !userForm.actorNombre.$pristine }">
										<div align="left">
											<label>*Nombre</label>
										</div>
										<div class="input-group">
											<span class="input-group-addon"><i class="fa fa-user"></i></span>
											<input capitalize type="text" name="actorNombre" maxlength="50" 
												class="form-control" ng-model="impugna.actorNombre" required>
										</div>
										<div
											ng-show="userForm.actorNombre.$invalid && !userForm.actorNombre.$pristine"
											class="help-block text-left">El nombre es requerido</div>
									</div>
								</div>

								<div class="col-md-6 ">

									<div class="form-group"
										ng-class="{ 'has-error' : userForm.actorApellidoPaterno.$invalid && !userForm.actorApellidoPaterno.$pristine }">
										<div align="left">
											<label>*Apellido Paterno</label>
										</div>


										<div class="input-group">
											<span class="input-group-addon"><i class="fa fa-user"></i></span>
											<input capitalize type="text" name="actorApellidoPaterno" maxlength="50" 
												class="form-control" ng-model="impugna.actorApellidoPaterno"
												required>
										</div>
										<div
											ng-show="userForm.actorApellidoPaterno.$invalid && !userForm.actorApellidoPaterno.$pristine"
											class="help-block text-left">El apellido paterno es
											requerido</div>
									</div>
								</div>
								<div class="col-md-6 ">
									<div class="form-group"
										ng-class="{ 'has-error' : userForm.actorApellidoMaterno.$invalid && !userForm.actorApellidoMaterno.$pristine }">
										<div align="left">
											<label>*Apellido Materno</label>
										</div>

										<div class="input-group">
											<span class="input-group-addon"><i class="fa fa-user"></i></span>
											<input capitalize type="text" name="actorApellidoMaterno" maxlength="50" 
												class="form-control" ng-model="impugna.actorApellidoMaterno"
												required>
										</div>

										<div
											ng-show="userForm.actorApellidoMaterno.$invalid && !userForm.actorApellidoMaterno.$pristine"
											class="help-block text-left">El apellido materno es
											requerido</div>
									</div>
								</div>
							 </div>
							 
							 
								<div class="row">
									<div class="col-md-12 text-center">
										<button type="submit" class="btn btn-danger"
											ng-click="submitForm(impugna)">Guardar</button>
									</div>
								</div>
						</form>
					</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<script type="text/javascript">
