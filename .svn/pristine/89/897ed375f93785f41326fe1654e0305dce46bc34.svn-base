<html>
<head>
<meta charset="utf-8">
<title>Devoluciones a Suministro</title>
</head>
<body>
	<section class="content-header">
		<h1>Devoluciones a Suministro</h1>
		<ol class="breadcrumb">
			<li>
				<a><i class="{{breadCrumbs.icono}}"></i>{{breadCrumbs.modulo}}</a>
			</li>
			<li class="active">
				{{breadCrumbs.servicio}}
			</li>
		</ol>
	</section>
	
	<section class="content">   
		<form name="formAltaDevolucion" role="form" novalidate>
			<div class="row">
    			<section class="col-lg-6 connectedSortable">
    				<div class="box box-danger">
						<div class="box-header with-border text-center">
							<h3 class="box-title">Datos Generales</h3>
						</div>
						<div class="box-body">
							<div class="row">
							
								<div class="col-lg-6 col-lg-offset-3 col-md-12 col-xs-12">
									<div class="form-group" ng-class="{'has-error': formAltaDevolucion.tipoSum.$invalid && formAltaDevolucion.tipoSum.$dirty}">
										<label>*Tipo de Suministro:</label>
										<div class="input-group">
											<span class="input-group-addon">
												<i class="fa fa-list-ul" aria-hidden="true"></i>
											</span>
											
											<select class="form-control" name="tipoSum" id="tipoSum" style="width: 100%;"
												ng-options="tiposum.id_tipo as tiposum.descripcion for tiposum in devolucionVO.tiposuministro"
												ng-model="devolucionVO.ltipo_sum" ng-required="true">
												<option value="" selected="selected">Seleccione</option>
								    		</select>	
										</div>
										<div ng-show="formAltaDevolucion.tipoSum.$error.required && formAltaDevolucion.tipoSum.$dirty" 
												ng-style="{color:'red'}">El tipo de suministro es requerido</div>			
									</div>
								</div>
								
								<div class="col-lg-6 col-md-12 col-xs-12">
							  		<div class="form-group" ng-class="{'has-error': formAltaDevolucion.regional.$invalid && formAltaDevolucion.regional.$dirty}">
                  						<label>*Regional:</label>
                      					<div class="input-group">
											<span class="input-group-addon">
												<i class="fa fa-list-ul" aria-hidden="true"></i>
											</span>
					                       	<select class="form-control" name="regional" id="regional" style="width: 100%;"
													ng-options="regional.reg_id as regional.reg_nombre for regional in devolucionVO.regionales"
													ng-model="devolucionVO.lstRegional" ng-change="actualizarAreaOpe()" ng-required="true">
					                        	<option value="" selected="selected">Seleccione</option>
					                       	</select>
				                       	</div>
                       					<div ng-show="formAltaDevolucion.regional.$error.required && formAltaDevolucion.regional.$dirty"
											ng-style="{color:'red'}">Este campo es requerido</div>
                    				</div>
								</div>
								
								<div class="col-lg-6 col-md-12 col-xs-12">
							    	<div class="form-group" ng-class="{'has-error': formAltaDevolucion.areaOpe.$invalid && formAltaDevolucion.areaOpe.$dirty}">
                       					<label>*Área Operativa:</label> 
			                      		<div class="input-group">
											<span class="input-group-addon">
												<i class="fa fa-list-ul" aria-hidden="true"></i>
											</span>
					                       	<select ng-disabled="devolucionVO.areaOperativa.length < 1"  class="form-control" name="areaOpe" id="areaOpe" style="width: 100%;"
												ng-options="areaOpe.upc_id as areaOpe.upc_nombre for areaOpe in devolucionVO.areaOperativa"
												ng-model="devolucionVO.lstAreaOpe" ng-change="actualizarOficial()" ng-required="true">
				                        		<option value="" selected="selected">Seleccione</option>
					                       	</select>
				                       	</div>
			                       		<div ng-show="formAltaDevolucion.areaOpe.$error.required && formAltaDevolucion.areaOpe.$dirty"
											ng-style="{color:'red'}">El área operativa es requerida</div>
                    				</div>
								</div>
								
							</div>
							
							<div class="row">
								<div class="col-lg-8 col-md-12 col-xs-12">
									<div class="form-group" ng-class="{'has-error': formAltaDevolucion.idOficial.$invalid && formAltaDevolucion.idOficial.$dirty}">
	                 					<label>*Oficial:</label> 
				                      		<div class="input-group">
												<span class="input-group-addon">
													<i class="fa fa-list-ul" aria-hidden="true"></i>
												</span>
				                       			<select ng-disabled="devolucionVO.oficiales.length < 1" class="form-control" name="idOficial"  id="idOficial" style="width: 100%;"
											   		ng-options="oficial.emp_id as oficial.descripcion for oficial in devolucionVO.oficiales"
				                       		  		ng-model="devolucionVO.lstRecibe" required>
				                        			<option value="" selected="selected">Seleccione</option>
				                       			</select>
			                       			</div>
					                        <div ng-show="formAltaDevolucion.idOficial.$error.required && formAltaDevolucion.idOficial.$dirty"
												ng-style="{color:'red'}">El oficial es requerido</div>
	                    			</div>
                    			</div>
							</div>
						</div>
					</div>
				</section>
			
				<section class="col-lg-6 connectedSortable">
					<div class="box box-danger">
						<div class="box-header with-border text-center">
							<h3 class="box-title">Información General</h3>
						</div>
						<div class="box-body">
						
							<div class="row">
							
								<div class="col-lg-6 col-md-12 col-xs-12">
				                    <div class="form-group" ng-class="{'has-error': formAltaDevolucion.txt_num_recibo.$invalid && formAltaDevolucion.txt_num_recibo.$dirty}">
			                      		<label>*Número de Recibo:</label>
			                      		<div class="input-group">
											<span class="input-group-addon">
												<i class="fa fa-hashtag" aria-hidden="true"></i>
											</span>
				                       		<input type="text" name="txt_num_recibo" integer-number ng-model="devolucionVO.txt_num_recibo" ng-required="true" maxlength="20" class="form-control text-uppercase">
				                        </div>
				                        <div ng-if="formAltaDevolucion.txt_num_recibo.$error.required && formAltaDevolucion.txt_num_recibo.$dirty"
											ng-style="{color:'red'}">El número de recibo es requerido</div>	
				                    </div>
                  				</div>
                  				
                  				<div class="col-lg-6 col-md-12 col-xs-12">
              						<div class="form-group" ng-class="{'has-error': formAltaDevolucion.fecha.$invalid && formAltaDevolucion.fecha.$dirty}">
                      					<label>*Fecha:</label>
                      					<div class="input-group">
											<span class="input-group-addon">
												<i class="fa fa-calendar" aria-hidden="true"></i>
											</span>
                      						<input type="text" name="fecha" readonly id="datepicker" calendar-element="backward"  ng-model="devolucionVO.txt_fecha" ng-required="true" class="form-control inputFecha" data-date-format="dd/mm/yyyy">
                   						</div>
				                      	<div ng-if="formAltaDevolucion.fecha.$error.required && formAltaDevolucion.fecha.$dirty"
									  		ng-style="{color:'red'}">La fecha es requerida</div>		
                    				</div>
                  				</div>
                  				
							</div>
							
							<div class="row">
								<div class="col-lg-6 col-md-12 col-xs-12">
									<div class="form-group" ng-class="{'has-error': formAltaDevolucion.folioIni.$invalid && formAltaDevolucion.folioIni.$dirty}">
                      					<label>*Folio Inicial:</label> 
                      					<div class="input-group">
											<span class="input-group-addon">
												<i class="fa fa-sort-numeric-asc" aria-hidden="true"></i>
											</span> 
                      						<input type="text" name="folioIni"  integer-number ng-model="devolucionVO.txt_folio_ini" ng-required="true" class="form-control" maxlength="10" ng-change="changeFolios()">
                   						</div>
                      					<div ng-if="formAltaDevolucion.folioIni.$error.required && formAltaDevolucion.folioIni.$dirty"
					  						ng-style="{color:'red'}">El folio inicial es requerido</div>	
                    				</div>
								</div>
								
								<div class="col-lg-6 col-md-12 col-xs-12">
									<div class="form-group" ng-class="{'has-error': formAltaDevolucion.folioFin.$invalid && formAltaDevolucion.folioFin.$dirty}">
                      					<label>*Folio Final:</label>
                      					<div class="input-group">
											<span class="input-group-addon">
												<i class="fa fa-sort-numeric-desc" aria-hidden="true"></i>
											</span>  
                      						<input type="text" name="folioFin" integer-number ng-model="devolucionVO.txt_folio_fin" ng-required="true" class="form-control" maxlength="10" ng-change="changeFolios()">
                   						</div>
                   						<div ng-if="formAltaDevolucion.folioFin.$error.required && formAltaDevolucion.folioFin.$dirty"
				  							ng-style="{color:'red'}">El folio final es requerido</div>	
               						</div>
								</div>
							</div>
							
							<div class="row">
								<div class="col-lg-6 col-md-12 col-xs-12">
									<div class="form-group" ng-class="{'has-error': formAltaDevolucion.total.$invalid && formAltaDevolucion.total.$dirty}">
                      					<label>*Total de Folios:</label>
                      					<div class="input-group">
											<span class="input-group-addon">
												<i class="fa fa-calculator" aria-hidden="true"></i>
											</span> 
                      						<input type="text" name="total" class="form-control" maxlength="10" 
                      							integer-number ng-model="devolucionVO.txt_tot_folios" 
                      							ng-required="true" readonly>
                   						</div>
                  						<div ng-if="formAltaDevolucion.total.$error.required && formAltaDevolucion.total.$dirty"
											ng-style="{color:'red'}">El total es requerido</div>
                  					</div>
								</div>
									
								<div class="col-lg-6 col-md-12 col-xs-12">
                 					<span ng-if="devolucionVO.validFolios" ng-style="{color:'red'}">Folio Inicial debe ser menor al Folio Final.</span>
                 				</div>
               				</div>
							
						</div>
					</div>
				</section>
			
				<section class="col-lg-12 connectedSortable">
					<div class="box box-danger">
						<div class="box-header with-border text-center">
							<h3 class="box-title">*Motivo</h3>
						</div>
						<div class="box-body">
							<div class="row">
								<div class="col-xs-12">
                    				<div class="form-group"  ng-class="{'has-error': formAltaDevolucion.motivo.$invalid && formAltaDevolucion.motivo.$dirty}">
                     					<div class="input-group">
											<div class="input-group-addon">
												<i class="fa fa-sticky-note" aria-hidden="true"></i>
											</div>
             								<textarea class="form-control" capitalize rows="1" name="motivo"  ng-model="devolucionVO.txt_motivo" ng-required="true"  maxlength="100" style="resize:none"></textarea>
             								
           								</div>
                       					<div ng-show="formAltaDevolucion.motivo.$error.required && formAltaDevolucion.motivo.$dirty" 
          									ng-style="{color:'red'}">El motivo es requerido</div>
                    				</div>
                  				</div>
							</div>
						</div>
						
						<div class="box-footer">
							<div class="row itemsBox">
								<button ng-click="altaDevolucion(devolucionVO)" class="btn btn-danger">
									<span>Guardar</span>
								</button>
							</div>
						</div>
					</div>
				</section>
			</div>
		</form>
	</section>
             
 <script>

  $(function(){
