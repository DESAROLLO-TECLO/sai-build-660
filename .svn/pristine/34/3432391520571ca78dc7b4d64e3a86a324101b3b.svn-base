
<html>
<head>
<meta charset="utf-8">
<title>Administración de Perfiles Web</title>
</head>
<body>
<!-- 	<div ng-show="error" class="alert alert-warning"> -->
<!-- 		{{error.message}}</div> -->
	<section class="content-header">
		<h1>Administración de Perfiles Web</h1>
		<ol class="breadcrumb">
			<li>
				<a><i class="{{breadCrumbs.icono}}"></i>{{breadCrumbs.modulo}}</a>
			</li>
			<li class="active">
				{{breadCrumbs.servicio}}
			</li>
		</ol>
	</section>
	<!-- Main content -->
	<section class="content">
		<form role="form" name="form" novalidate>
			<div class="row">
				<section class="col-md-6 col-md-offset-3 col-xs-12">
					<div class="box box-danger">
						<div class="box-header with-border text-center">
							<h3 class="box-title">Seleccionar Tipo</h3>
						</div>

						<div class="box-body">
							<div class="row">
								<div class="col-md-8 col-md-offset-2 col-xs-12">
									<div class="form-group" ng-class="{ 'has-error' : form.tipoPerfil.$invalid && !form.tipoPerfil.$pristine }">
									 
										<span class="input-group">
											<span class="input-group-addon"> <i class="fa fa-users"></i></span>
											<select ng-change="ocultaTabla()" name="tipoPerfil"
												ng-options="item as item.perfilNombre for item in perfiles"
												ng-model="selected" class="form-control" required>
												<option value="">Seleccione</option>
											</select>
										</span>
										
										<span ng-show="form.tipoPerfil.$invalid && !form.tipoPerfil.$pristine" 
											class="help-block">El tipo de perfil es requerido</span>
									</div>
								</div>
							</div>
							<div class="row itemsBox">
<!-- 								<div class="col-xs-4 text-center"> -->
									<button class="btn btn-primary" type="button" data-toggle="modal" data-target="#perfilNuevo">
										Nuevo
									</button>
<!-- 								</div> -->
								
<!-- 								<div class="col-xs-4 text-center"> -->
									<button class="btn btn-primary" type="button" ng-click="modificar(selected.perfilId)">
										Modificar
									</button>
<!-- 								</div> -->
								
<!-- 								<div class="col-xs-4 text-center"> -->
									<button class="btn btn-primary" type="button" ng-click="eliminarPerfil(selected.perfilId)">
										Eliminar
									</button>
<!-- 								</div> -->
							</div>
							
							
							
						</div>
					</div>
				</section>
				
				
				
				
			</div>
			<div class="row centerCol">
			<div class="col-xs-12 col-sm-11">
				<div class="ngIfAnimate" ng-if="TablaAdminPerfiles">
					<div class="box box-danger" align="center">
						<div class="box-header with-border">
							<div align="center">
								<h2 class="box-title">Administrar Perfil: {{selected.perfilNombre}}</h2>
							</div>

							<div class="box-tools pull-right">
								<button type="button" class="btn btn-box-tool"
									data-widget="collapse">
									<i class="fa fa-minus"></i>
								</button>
							</div>
						</div>
						<div class="box-body text-left">
							<div class="col-sm-6">
								<div class="row">
									<div class="col-sm-12 text-center">
										<label><strong>SERVICIOS ACTIVOS</strong></label>
									</div>
								</div>
								<div class="row" style="border-bottom: 1px solid #F4F4F4;">
									<div class="col-sm-12 text-left">
										<label><strong>Nombre del Servicio</strong></label>
									</div>
								</div>
								<div class="pre-scrollable" style="max-height: 280px;">
									<div class="row"
										style="padding:5px 0;border-bottom:2px solid #fafafa;margin-right:3px;"
										onmouseover="this.style.background='#ecf0f1';"
										onmouseout="this.style.background='#fff';"
										ng-repeat="acti in menusActivos">
										<div class="col-xs-9 col-sm-10 text-left">{{acti.menu}}</div>
										<div class="col-xs-3 col-sm-2">
											<div style="position:absolute;right:15px;">
												<button class="btn btn-xs btn-danger" tooltip="Eliminar" tooltip-placement="left"
													ng-click="eliminarMenu(acti.menu_id,selected.perfilId)">
													<i class="fa fa-minus"></i>
												</button>
											</div>
										</div>
									</div>
								</div>

							</div>
							<div class="hidden-md hidden-lg hidden-xl">
								<br /> <br />
							</div>
							<div class="col-sm-6">
								<div class="row">
									<div class="col-sm-12 text-center">
										<label><strong>SERVICIOS INACTIVOS</strong></label>
									</div>
								</div>
								<div class="row" style="border-bottom: 1px solid #F4F4F4;">
									<div class="col-sm-12 text-left">
										<label><strong>Nombre del Servicio</strong></label>
									</div>
								</div>
								<div class="pre-scrollable" style="max-height: 280px;">
									<div class="row"
										style="padding:5px 0;border-bottom:2px solid #fafafa;margin-right:3px;"
										onmouseover="this.style.background='#ecf0f1';"
										onmouseout="this.style.background='#fff';"
										ng-repeat="inac in menusInactivos">
										<div class="col-xs-9 col-sm-10 text-left">{{inac.menu}}</div>
										<div class="col-xs-3 col-sm-2">
											<div style="position:absolute;right:15px;">
												<button class="btn btn-xs btn-success" tooltip="Agregar" tooltip-placement="left"
													ng-click="agregarMenu(inac.menu_id,selected.perfilId)">
													<i class="fa fa-plus"></i>
												</button>
											</div>
										</div>
									</div>
								</div>

							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		</form>
	</section>
	
	<div class="modal fade bs-example-modal-sm" id="perfilNuevo" data-keyboard="false" data-backdrop="static">
		  <div class="modal-dialog modal-sm">
		    <div class="modal-content">
		        <div class="modal-header  bg-red-active">
					<button type="button" class="close" data-dismiss="modal" aria-label="Close" ng-click="closePerfilmodal()">
						<span aria-hidden="true">&times;</span>
					</button>
					<h4 class="modal-title" id="myModalLabel">Perfil Nuevo</h4>
				</div>
				
		        <div class="modal-body" id="modal-body">
		            <div class="row centerCol">
						<div class="col-xs-12">
							<div class="form-group" ng-class="{ 'has-error' : myForm2.valor.$invalid && !myForm2.valor.$pristine }">
						
								<div align="left">
									<label for="example1">*Nombre:</label>
								</div>
								
								<form name="myForm2" novalidate>
									<div class="input-group">
										<span class="input-group-addon"> <i
											class="fa fa-user"></i></span> <input name="valor" type="text"
											ng-model="perfilNombre" class="form-control" capitalize maxlength="50" 
											required />
									</div>
		
									<p ng-show="myForm2.valor.$invalid && !myForm2.valor.$pristine" class="help-block">
										El nombre del perfil es requerido
									</p>			
								</form>
							</div>
						</div>
					</div>
		        </div>
		        <div class="modal-footer">
					<button type="submit" class="btn btn-primary" ng-click="nuevoPerfil(perfilNombre)">
						Guardar
					</button>
    			</div>
		    </div>
		  </div>
		</div>
	
</body>
</html>
